{
  "expo": {
    "name": "Time with God",
    "slug": "tiempo-con-dios",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Una app para momentos diarios de oración, reflexión y meditación espiritual",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F6FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.timewithgod.app",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F8F6FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.timewithgod.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av",
      "expo-notifications",
      "expo-font",
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7486e489-d926-482b-bd78-514b6c4b40ac"
      }
    }
  }
}
