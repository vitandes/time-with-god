{
  "expo": {
    "name": "Tiempo con Dios",
    "slug": "tiempo-con-dios",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Una app para momentos diarios de oración, reflexión y meditación espiritual",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F6FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tiempoconDios.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F8F6FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.tiempoconDios.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av",
      "expo-notifications"
    ]
  }
}
